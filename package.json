{
  "name": "Qhapaq-Shogi-Academy",
  "version": "1.0.0",
  "description": "Shogi Quiz Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron ."
  },
  "keywords": [
    "Electron",
    "Shogi",
    "quiz",
    "training",
    "Qhapaq"
  ],
  "dependencies": {
    "bootstrap": "^4.1.3",
    "electron-prompt": "^1.7.0",
    "encoding-japanese": "^1.0.30",
    "iconv-lite": "^0.6.3",
    "vue": "^3.2.1"
  },
  "build": {
    "appId": "qhapaq.org.qhapaq.shogi.academy",
    "files": [
      "package.json",
      "package-lock.json",
      "src/*",
      "static/*"	
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^15.1.2",
    "electron-builder": "^22.13.1"
  }
}
